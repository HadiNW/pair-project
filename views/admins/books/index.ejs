<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <title>Pair Project</title>
</head>
<body>
    <%-include ../partials/header%>
    <div class="container">
        <div class="jumbotron jumbotron-fluid text-center">
            <div class="container">
              <h1 class="display-4">Categories</h1>
            </div>
          </div>
    </div>
    <div class="container md-3">
            <a href="/admin/books/add"  class="btn btn-success">Add Book </a>
    </div> 
    <br>
    <div class="container">
            <table class="table">
                    <thead>
                      <tr>                 
                        <th>No</th>      
                        <th scope="col">ID</th>                       
                        <th scope="col">Name</th>
                        <th scope="col">Category</th>
                        <th scope="col">Edit</th>
                        <th scope="col">Delete</th>
                      </tr>
                    </thead>
                    <tbody>    
                    <% for (let i = 0; i < books.length; i++) {%>                 
                      <tr>
                        <th scope="row"><%= i+1 %></th>
                        <td><%= books[i].id%></td>
                        <td><%= books[i].name%></td>
                        <td><%= books[i].name%></td>
                       
                        <td><a href="/admin/books/<%= books[i].id %>/edit" class="btn btn-primary">Edit</a></td>                       
                        <td>                           
                            <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#exampleModal">
                                Delete
                            </button>
                             <a href="/admin/categories/<%= books[i].id %>/delete %>" class="btn btn-danger">Delete</a>
                            <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel">Confirm!</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                    </div>
                                    <div class="modal-body">
                                    Are you sure wana to delete
                                    </div>
                                    <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                    <a href="/admins/categories/<%= books[i].id %>/delete %>" class="btn btn-danger">Delete</a>
                                    </div>
                                </div>
                                </div>
                            </div>                            
                        </td>
                      </tr>
                    <% } %>
                    </tbody>
                  </table>
    </div>

   
    <%-include ../partials/footer%>
</body>
</html>