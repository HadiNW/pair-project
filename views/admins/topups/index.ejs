<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <title>Pair Project</title>
</head>
<body>
    <%-include ../partials/header%>
    <div class="container">
        <div class="jumbotron jumbotron-fluid text-center">
            <div class="container">
              <h1 class="display-4">Top Up</h1>
            </div>
          </div>
    </div>
    <!-- <div class="container md-3">
            <a href="/admin/categories/add"  class="btn btn-success">Add Category </a>
    </div>  -->
    <br>
    <div class="container">
            <table class="table">
                    <thead>
                      <tr>                 
                        <th>No</th>      
                        <th scope="col">ID</th>                       
                        <th scope="col">Customer</th>
                        <th>Amount</th>
                        <th>Date</th>
                        <th>Approved</th>
                        <th>Transfer</th>
                        <th scope="col">Action</th>
                       
                      </tr>
                    </thead>
                    <tbody>    
                    <% for (let i = 0; i < data.length; i++) {%>                 
                      <tr>
                        <th scope="row"><%= i+1 %></th>
                        <td><%= data[i].id%></td>
                        <td><%= data[i].Customer.name%></td>
                        <td><%= data[i].amount%></td>
                        <td><%= data[i].createdAt%></td>
                        <td><%= helpers.getTrue(data[i].isApproved)%></td>
                        <td>
                          â€‹<picture>
                              <!-- image-1538052721979.jpeg -->
                            <source srcset="http://localhost:8000/static/uploads/<%= data[i].transfer%>" type="image/svg+xml">
                            <img src="http://localhost:8000/static/uploads/<%= data[i].transfer%>" class="img-fluid img-thumbnail" alt="...">
                          </picture>
                        </td>
                       
                        <td>
                            <a href="/admin/topups/<%= data[i].id %>/approve/<%= data[i].Customer.id%>" class="btn btn-primary">Approve</a>
                            <!-- <a href="/admin/topups/<%= data[i].id %>/reject/<%= data[i].Customer.id %>" class="btn btn-danger">Reject</a> -->
                        </td>                       
                      
                      </tr>
                    <% } %>
                    </tbody>
                  </table>
    </div>

   
    <%-include ../partials/footer%>
</body>
</html>